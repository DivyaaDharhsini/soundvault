

class SongNode {
    constructor(data) {
        this.data = data;
        this.next = null;
        this.prev = null;
    }
}

class DoublyLinkedList {
    constructor() {
        this.head = null;
        this.tail = null;
        this.current = null;
        this.size = 0;
    }

    append(songData) {
        const newNode = new SongNode(songData);
        
        if (!this.head) {
            this.head = newNode;
            this.tail = newNode;
            this.current = newNode;
        } else {
            newNode.prev = this.tail;
            this.tail.next = newNode;
            this.tail = newNode;
        }
        
        this.size++;
        return newNode;
    }

    insertAt(songData, index) {
        if (index < 0 || index > this.size) return false;
        
        if (index === this.size) {
            this.append(songData);
            return true;
        }
        
        const newNode = new SongNode(songData);
        
        if (index === 0) {
            newNode.next = this.head;
            this.head.prev = newNode;
            this.head = newNode;
        } else {
            let current = this.head;
            let count = 0;
            
            while (count < index) {
                current = current.next;
                count++;
            }
            
            newNode.prev = current.prev;
            newNode.next = current;
            current.prev.next = newNode;
            current.prev = newNode;
        }
        
        this.size++;
        return true;
    }

    delete(songName) {
        if (!this.head) return false;
        
        let current = this.head;
        
        while (current) {
            if (current.data.name === songName) {
                if (current === this.head) {
                    this.head = current.next;
                    if (this.head) this.head.prev = null;
                } else if (current === this.tail) {
                    this.tail = current.prev;
                    this.tail.next = null;
                } else {
                    current.prev.next = current.next;
                    current.next.prev = current.prev;
                }
                
                if (this.current === current) {
                    this.current = current.next || this.head;
                }
                
                this.size--;
                return true;
            }
            current = current.next;
        }
        
        return false;
    }

    getNext() {
        if (!this.current || !this.current.next) {
            return this.head ? this.head.data : null;
        }
        this.current = this.current.next;
        return this.current.data;
    }

    getPrev() {
        if (!this.current || !this.current.prev) {
            return this.tail ? this.tail.data : null;
        }
        this.current = this.current.prev;
        return this.current.data;
    }

    getCurrent() {
        return this.current ? this.current.data : null;
    }

    setCurrentByName(name) {
        let node = this.head;
        while (node) {
            if (node.data.name === name) {
                this.current = node;
                return true;
            }
            node = node.next;
        }
        return false;
    }

    toArray() {
        const arr = [];
        let current = this.head;
        while (current) {
            arr.push(current.data);
            current = current.next;
        }
        return arr;
    }

    search(name) {
        let current = this.head;
        let index = 0;
        
        while (current) {
            if (current.data.name.toLowerCase().includes(name.toLowerCase())) {
                return { node: current, index };
            }
            current = current.next;
            index++;
        }
        return null;
    }

    clear() {
        this.head = null;
        this.tail = null;
        this.current = null;
        this.size = 0;
    }

    getSize() {
        return this.size;
    }

    isEmpty() {
        return this.size === 0;
    }
}
